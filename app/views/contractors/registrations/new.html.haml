%h2 Contractor Registration Form
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email, "Email"
    %br/
    = f.email_field :email
  .field
    = f.label :password, "Password"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, "Password Confirmation"
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :first_name, "First Name"
    %br/
    = f.text_field :first_name, autofocus: true
  .field
    = f.label :last_name, "Last Name"
    %br/
    = f.text_field :last_name
  .field
    = f.label :company_name, "Company Name"
    %br/
    = f.text_field :company_name
  .field
    = f.label :address, "Address"
    %br/
    = f.text_field :address, autocomplete: "off"
  .field
    = f.label :city, "City"
    %br/
    = f.text_field :city
  .field
    = f.label :state, "State"
    %br/
    = f.text_field :state
  .field
    = f.label :zip_code, "Zip Code"
    %br/
    = f.number_field :zip_code
  .field
    = f.label :country, "Country"
    %br/
    = f.text_field :country
  .field
    = f.label :experience, "Experience"
    %br/
    = f.text_field :experience
  .actions
    = f.submit "Submit"
= render "contractors/shared/links"
