%div
  =link_to 'Home', root_path
  = link_to 'Current Available Tasks', tasks_path
  - if user_signed_in? && contractor_signed_in?
    = link_to 'My Profile', edit_contractor_registration_path
    = link_to 'Log Out', destroy_contractor_session_path, method: :delete
  - elsif user_signed_in? && current_user.requester
    = link_to "View My Tasks", requesters_tasks_path
    = link_to 'Log Out', destroy_requester_session_path, method: :delete
  - else
    = link_to 'Requester Log In', new_user_session_path
    = link_to 'Requester Sign Up', new_user_registration_path
    = link_to 'Contractor Log In', new_user_session_path
    = link_to 'Contractor Sign Up', new_user_registration_path({ contractor: true })
